{
  "name": "nullid",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "cli": "node scripts/nullid-local.mjs",
    "build": "tsc -b && vite build && node scripts/generate-sbom.mjs dist/sbom.json && node scripts/generate-build-manifest.mjs",
    "verify:build": "node scripts/verify-build-manifest.mjs",
    "build:repro": "npm run build && npm run verify:build",
    "sbom": "node scripts/generate-sbom.mjs",
    "setup:precommit": "node scripts/install-precommit.mjs",
    "release:bundle": "node scripts/package-release.mjs",
    "release:verify": "node scripts/verify-release-bundle.mjs",
    "desktop:init": "node scripts/tauri-init.mjs",
    "assets:brand": "node scripts/generate-brand-assets.mjs",
    "preview": "vite preview",
    "typecheck": "tsc -b",
    "lint": "node scripts/lint.js",
    "test": "tsc -p tsconfig.test.json && node --test build-test/__tests__/*.js",
    "e2e": "playwright test",
    "test:e2e:i18n-layout": "playwright test tests/e2e/i18n-layout.spec.ts",
    "validate": "npm run typecheck && npm run lint && npm run test && npm run e2e && npm run build && npm run verify:build"
  },
  "dependencies": {
    "@noble/hashes": "^1.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  }
}
